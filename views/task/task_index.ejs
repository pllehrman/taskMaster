<body>
    <header>
        <h1>Tasks</h1>
    </header>
    <main>
        <div class="task-container">
            <a href="/task/new" class="add-button">Add Task</a>
            <ul class="task-list">
                <% tasks.forEach(function(task) { %>
                    <li class="task-item">
                        <h2 class="task-title"><%= task.name %></h2>
                        <p class="task-description"><%= task.description %></p>
                    </li>
                <% }); %>
            </ul>
        </div>
    </main>
</body>

